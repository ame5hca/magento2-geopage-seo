<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">
                state_page_form.state_page_form_data_source
            </item>
        </item>
        <item name="label" xsi:type="string" translate="true">State Page</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="GiftGroup\GeoPage\Block\Adminhtml\StatePage\Edit\SaveButton"/>            
            <button name="save_and_continue" class="GiftGroup\GeoPage\Block\Adminhtml\StatePage\Edit\SaveAndContinueButton"/>
            <button name="delete" class="GiftGroup\GeoPage\Block\Adminhtml\StatePage\Edit\DeleteButton"/>
            <button name="back" class="GiftGroup\GeoPage\Block\Adminhtml\StatePage\Edit\BackButton"/>
        </buttons>
        <namespace>state_page_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>state_page_form.state_page_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="state_page_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="geopage/statepage/save"/>
        </settings>
        <dataProvider class="GiftGroup\GeoPage\Ui\State\Component\Form\StatePageDataProvider"
                      name="state_page_form_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label>General Details</label>
        </settings>
        <field name="id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">state_page</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>id</dataScope>
            </settings>
        </field>
        <field name="is_active" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">state_page</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Enable Page</label>
                <dataScope>is_active</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="state_id" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">state_page</item>
                </item>
            </argument>
            <settings>
                <dataType>int</dataType>
                <label translate="true">State</label>
                <dataScope>state_id</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="GiftGroup\GeoPage\Model\Config\Source\States"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="store_id" formElement="select" class="GiftGroup\GeoPage\Ui\City\Component\Form\Field\ReadOnlyOnEdit">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">state_page</item>
                </item>
            </argument>
            <settings>
                <dataType>int</dataType>
                <label translate="true">Store View</label>
                <dataScope>store_id</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Magento\Store\Ui\Component\Listing\Column\Store\Options"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="description" formElement="wysiwyg">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">state_page</item>
                </item>
            </argument>
            <settings>
                <label>Description</label>
                <dataScope>description</dataScope>
            </settings>
            <formElements>
                <wysiwyg>
                    <settings>
                        <wysiwyg>true</wysiwyg>
                    </settings>
                </wysiwyg>
            </formElements>
        </field>
    </fieldset>
